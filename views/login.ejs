<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
</head>
<style>
    body{
        background-image: url('/public/images/auth-bg.png');
    }
</style>

<body>
    <form action="/loginpage" method="post">
        Email : <input type="email" name="email" id="email" onchange="emailcheck()"> <br> <br>
        <p id="err"></p>
        Password : <input type="password" name="pass" id="pass"> <br>
        <input type="submit" value="submit">
    </form>
    don't have any account?<a href="/">Register here</a>
</body>
<script>
    function emailcheck() {
        let email = document.getElementById('email').value
        console.log(email)
        fetch(`/email?email=${email}`)
            .then((res) => {
                return res.json()
            }).then((data) => {
                console.log(data)
                if (data == "false"){
                    document.getElementById("err").innerHTML = "Email doesn't exist"
                }
                else {
                    document.getElementById("err").innerHTML = null
                }
            })
    }
</script>

</html>